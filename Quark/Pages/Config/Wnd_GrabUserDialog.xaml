<Window x:Class="Quark.AppConfig.Util.Config.GrabUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select User" Width="300" Height="100">
    <StackPanel>
        <ComboBox x:Name="UserComboBox" Margin="5" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Margin="5" IsDefault="True" Click="OK_Click" />
            <Button Content="Cancel" Margin="5" IsCancel="True" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>